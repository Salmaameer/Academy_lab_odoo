<odoo>
    <!-- Category List view -->
     <record id="view_academy_course_category_list" model="ir.ui.view">
        <field name="name">academy.course.category.list</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="course_count"/>
            </list>
        </field>
    </record>

    <!-- Category Form view -->
    <record id="view_academy_course_category_form" model="ir.ui.view">
        <field name="name">academy.course.category.form</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="course_count" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Categories action -->
     <record id="action_academy_course_categories" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">academy.course.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="academy_courses_categories" 
              name="Categories" 
              parent="academy_courses"
              action="action_academy_course_categories" />

</odoo>