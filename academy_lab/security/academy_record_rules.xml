<odoo>
    <!-- Students: only published courses -->
    <record id="rule_student_courses" model="ir.rule">
        <field name="name">Student: published courses only</field>
        <field name="model_id" ref="model_academy_course"/>
        <field name="groups" eval="[(4, ref('academy_lab.group_student'))]"/>
        <field name="domain_force">[('state', '=', 'published')]</field>
        <field name="perm_read" eval="1"/>
    </record>

    <!-- Students: only own enrollments -->
    <record id="rule_student_enrollments" model="ir.rule">
        <field name="name">Student: own enrollments only</field>
        <field name="model_id" ref="model_academy_enrollment"/>
        <field name="groups" eval="[(4, ref('academy_lab.group_student'))]"/>
        <field name="domain_force">[('student_id', '=', user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
    </record>

    <!-- Instructors: read-only enrollments -->
    <record id="rule_instructor_enrollments" model="ir.rule">
        <field name="name">Instructor: read-only enrollments</field>
        <field name="model_id" ref="model_academy_enrollment"/>
        <field name="groups" eval="[(4, ref('academy_lab.group_instructor'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Managers: full access is handled by access rights above -->
</odoo>
