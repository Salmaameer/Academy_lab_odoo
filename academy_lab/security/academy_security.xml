<odoo>

    <record id="group_student" model="res.groups">
        <field name="name">Academy Student</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_instructor" model="res.groups">
        <field name="name">Acadmey Instructor</field>
        <field name="implied_ids" eval="[(4, ref('academy_lab.group_student'))]"/>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Academy Manager</field>
        <field name="implied_ids" eval="[(4, ref('academy_lab.group_instructor'))]"/>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
</odoo>